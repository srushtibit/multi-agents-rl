# Environment Variables for NexaCorp Support System
# Copy this file to .env and update with your actual values

# Email Configuration - REQUIRED for escalation system
EMAIL_SENDER_PASSWORD=your_app_password_here

# Optional: Override email settings (defaults from system_config.yaml will be used if not set)
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SENDER_EMAIL=your_email@gmail.com
# EMAIL_USE_TLS=true

# Database Configuration (optional)
# DATABASE_URL=sqlite:///logs/support_system.db

# API Keys (for future integrations)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here

# System Configuration (optional)
# DEBUG_MODE=false
# LOG_LEVEL=INFO
